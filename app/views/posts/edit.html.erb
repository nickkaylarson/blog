<h1>Edit Post</h1>

<div class="row">
  <div class="col-md-6 my-4">
    <%= form_with model: [current_user, @post] do |f| %>
      <%= render partial: 'partials/form_errors', locals: { model: @post } %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control' %>
      </div>
      <div class="actions mt-4">
        <input class="btn btn-success btn-block" type="submit" value="<%= t 'posts.form.save' %>">
      </div>
    <% end %>
  </div>
</div>

<div class="py-4">
  <%= link_to t('links.to_return'), :back, class: 'btn btn-secondary' %>
</div>
